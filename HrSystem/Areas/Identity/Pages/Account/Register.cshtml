@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section id="configuration">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">Add New User </h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="px-3">
                            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form form-horizontal" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-body">

                                    <div class="form-group row">
                                        <label class="col-md-3 label-control" asp-for="Input.FullName">Full Name : </label>
                                        <div class="col-md-9">
                                            <input type="text" asp-for="Input.FullName" class="form-control">
                                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-3 label-control" asp-for="Input.Username">Username : </label>
                                        <div class="col-md-9">
                                            <input type="text" asp-for="Input.Username" class="form-control">
                                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-3 label-control" asp-for="Input.Email">Email : </label>
                                        <div class="col-md-9">
                                            <input type="text" asp-for="Input.Email" class="form-control">
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                    </div>

                                   <div class="form-group row">
                                        <label class="col-md-3 label-control" asp-for="Input.Password">Password : </label>
                                        <div class="col-md-9">
                                            <input asp-for="Input.Password" class="form-control">
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-3 label-control" asp-for="Input.ConfirmPassword">Confirm Password : </label>
                                        <div class="col-md-9">
                                            <input  asp-for="Input.ConfirmPassword" class="form-control">
                                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-3 label-control">Roles: </label>
                                        <div class="col-md-9">
                                            <select asp-for="Input.RoleName" asp-items="Model.roles" class="form-control">
                                                <option selected="" disabled="">Select Role</option>
                                            </select>
                                        </div>
                                    </div>


                                    <div class="form-actions">
                                        <button type="button" class="btn btn-danger mr-1">
                                            <i class="icon-trash"></i> Cancel
                                        </button>
                                        <button type="submit" class="btn btn-success">
                                            <i class="icon-note"></i> Save
                                        </button>
                                    </div>
                                </div>
                            </form>
                    </div>
                </div>
               
            </div>
        </div>
    </div>
</section>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
