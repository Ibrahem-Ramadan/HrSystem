@model IEnumerable<HrSystem.Models.Attendance>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>
    <a asp-action="createXl" class="btn btn-primary">Create New</a>
</p>
<table class="table table-striped table-bordered zero-configuration mt-40">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AttendanceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AttendanceTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
                var date = item.AttendanceDate.Value.ToShortDateString() ?? string.Empty;
            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.FirstName)
                @Html.DisplayFor(modelItem => item.Employee.LastName)
            </td>
            <td>
                @Html.DisplayName(item.AttendanceDate.ToShortDateString())
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttendanceTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeaveTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AttendanceId" class="btn btn-success">Edit</a> |
                <button type="button" class="btn btn-danger mr-1" onclick="showUserDeleteBox(@item.AttendanceId)"><i class="icon-trash"></i>Delete</button>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="card-body">
    <div class="px-3">
        <form class="form form-horizontal" method="post" asp-controller="Attendances" asp-action="Create" enctype="multipart/form-data">
            <div class="form-body">

                <div class="form-group row">
                    <label class="col-md-3 label-control" for="Employee">Employee Name : </label>
                    <div class="has-icon-left col-md-6">
                        <select name="EmployeeId" class="form-control" id="Employee">
                        @foreach (var item in (List<HrSystem.Models.Employee>)ViewBag.EmployeeId)
                        {
                            <option value="@item.Id">@item.FirstName @item.LastName</option>
                        }
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-3 label-control" for="Date">Date: </label>
                    <div class="has-icon-left col-md-6">
                        <input type="date" id="Date" class="form-control" name="AttendanceDate">
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-3 label-control" for="Start">Start time: </label>
                    <div class="has-icon-left col-lg-6">
                        <input type="time" id="Start" class="form-control" name="AttendanceTime">
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-3 label-control" for="End">End time: </label>
                    <div class="has-icon-left col-lg-6">
                        <input type="time" id="End" class="form-control" name="LeaveTime">
                    </div>
                </div>
            </div>
           
            <div class="form-actions center">
                <button type="reset" class="btn btn-danger mr-1">
                    <i class="icon-trash"></i> Cancel
                </button>

                <button type="submit" class="btn btn-success">
                    <i class="icon-note"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>

@section scripts
    {
    <script>
        function showUserDeleteBox(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Deleted!',
                        'Your file has been deleted.',
                        'success',
                        window.location.href = '/Attendances/Delete/' + id
                    )
                }
            })
        }
    </script>
}